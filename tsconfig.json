{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "jsx": "react"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
  "baseUrl": ".",
  "paths": {
    "buddy-react/state/*": ["dist/state/*"],
    "buddy-react/link/*": ["dist/link/*"],
  }
}
